<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="info.sayederfanarefin.boovchat.SignupActivity"
    android:id="@+id/ba">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="30dp"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/textView6"
        android:textSize="18dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView5"
        android:layout_toStartOf="@+id/editText_signup_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText_signup_email"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textSize="18dp"
        android:id="@+id/textView7"

        android:layout_below="@+id/textView6"
        android:layout_toStartOf="@+id/editText_signup_email"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="18dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_signup_name"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignEnd="@+id/editText"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone no:"
        android:textSize="18dp"
        android:layout_below="@+id/textView8"
        android:id="@+id/textView9"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView8"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sex:"
        android:textSize="15dp"
        android:id="@+id/textView10"
        android:layout_marginTop="49dp"
        android:layout_alignStart="@+id/textView6"
        android:layout_centerVertical="true"
        android:layout_below="@+id/editText_signup_phone"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/yo"

        android:layout_toEndOf="@+id/textView6"
        android:layout_below="@+id/editText_signup_phone">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/radioButton_male" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:id="@+id/radioButton_female" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            android:id="@+id/radioButton_other" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S i g n  U p"
        android:id="@+id/button_sign_up"
        android:layout_below="@+id/yo"

        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/editText_signup_phone"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText_signup_phone"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignStart="@+id/editText_signup_name" />

</RelativeLayout>
